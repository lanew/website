<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="OnlineDevSchool Blog">
<meta itemprop="description" content="<%= truncate(@post.html, length: 249) %>">
<meta itemprop="image" content="<%= @site_share_image %>">
<meta itemprop="headline" content="<%= @post.title %>">
<meta itemprop="datePublished" content="<%= @post.published_at.to_s(:db) %>">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@onlinedevschool">
<meta name="twitter:creator" content="@onlinedevschool">
<meta name="twitter:url" content="<%= post_url(@post.permalink) %>">
<meta name="twitter:title" content="<%= @post.title %>">
<meta name="twitter:description" content="<%= truncate(@post.html, length: 249) %>">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image" content="<%= @site_share_image %>">

<!-- Open Graph data -->
<meta property="og:title" content="<%= @post.title %>" />
<meta property="og:type" content="article" />
<meta property="og:url" content="<%= post_url(@post.permalink) %>" />
<meta property="og:image" content="<%= @site_share_image %>" />
<meta property="og:description" content="<%= truncate(@post.html, length: 249) %>" />
<meta property="og:site_name" content="OnlineDevSchool Blog" />
