<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<%= @site_name %>">
<meta itemprop="description" content="<%= @site_description %>">
<meta itemprop="image" content="<%= @site_share_image %>">
<meta itemprop="headline" content="<%= @site_title %>">
<meta itemprop="datePublished" content="<%= 2.days.ago.to_s(:db) %>">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@onlinedevschool">
<meta name="twitter:creator" content="@onlinedevschool">
<meta name="twitter:url" content="<%= @site_url %>">
<meta name="twitter:title" content="<%= @site_title %>">
<meta name="twitter:description" content="<%= @site_description %>">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image" content="<%= @site_share_image %>">

<!-- Open Graph data -->
<meta property="og:title" content="<%= @site_title %>" />
<meta property="og:type" content="school" />
<meta property="og:url" content="<%= @site_url %>" />
<meta property="og:image" content="<%= @site_share_image %>" />
<meta property="og:description" content="<%= @site_description %>" />
<meta property="og:site_name" content="<%= @site_name %>" />
