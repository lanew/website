<%= bootstrap_form_for [:authoring, post] do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :markdown %>
  <%= f.submit class: 'btn btn-primary' %>
  <%- unless post.published? %>
    <%= button_tag "Update and Publish", type: 'button',
      class: "btn btn-warning",
      id: 'publish_btn' %>
  <%- end %>
<%- end %>
