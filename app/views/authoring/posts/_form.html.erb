<%= bootstrap_form_for [:authoring, post] do |f| %>
  <%= f.text_field :title %>

  <%= f.collection_select :category_id, 
    Category.all, :id, :name, include_blank: true %>
  <%= f.collection_select :series_id, 
    Series.all, :id, :name, include_blank: true %>

  <%= f.text_area :markdown %>
  <%= f.submit class: 'btn btn-primary' %>
  <%- unless post.published? %>
    <%= button_tag "Update and Publish", type: 'button',
      class: "btn btn-warning", id: 'publish_btn' %>
  <%- end %>
<%- end %>
